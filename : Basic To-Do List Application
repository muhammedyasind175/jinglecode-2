def start_tracker():
    my_notes = []

    print("--- MY PERSONAL WORK LIST ---")

    while True:
        print("\nWhat would you like to do?")
        print("A - Add a new note")
        print("B - View my notes")
        print("C - Quit")

        user_choice = input("Select an option: ").upper()

        if user_choice == 'A':
            item = input("Write your task here: ")
            my_notes.append(item)
            print("Done! It's in the list.")

        else if user_choice == 'B':
            print("\n--- TO-DO LIST ---")
            if not my_notes:
                print("Your list is empty right now.")
            else:
                for i in range(len(my_notes)):
                    print(f"{i + 1}. {my_notes[i]}")

        else if user_choice == 'C':
            print("Closing the app. Have a great day!")
            break

        else:
            print("Oops! That's not a valid option. Try A, B, or C.")
start_tracker()
